- if @display.nil?
  = render "motion"
  = render "summary"
- elsif @display == "allvotes"
  = render "motion"
  = render "allvotes"
- elsif @display == "allpossible"
  = render "motion"
  = render "summary"
- elsif @display == "policies"
  = render "policies"
  = render "motion"
- else
  - raise "unexpected value"
