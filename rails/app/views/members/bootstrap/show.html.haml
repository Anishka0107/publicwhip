- content_for :title do
  - if @display == "allfriends"
    Friends of
    = @member.full_name
  - elsif @electorate
    Voting Record — Representatives for
    = @member.electorate
  - else
    Voting Record —
    = @member.full_name2

.page-header
  %h1= yield :title

%p
  %ul.nav.nav-tabs
    = members_nav_link_bs(@member, nil, @members, @electorate ? @member.url_electorate : nil, nil, "Summary", "Overview of MP", @display.nil? || @display == "summary")
    = members_nav_link_bs(@member, nil, @members, @electorate ? @member.url_electorate : nil, "allvotes", "Votes attended", "Show every vote cast by this MP", @display == "allvotes")
    = members_nav_link_bs(@member, nil, @members, @electorate ? @member.url_electorate : nil, "everyvote", "All votes", "Show even divisions where the MP was absent, but could have voted", @display == "everyvote")
    = members_nav_link_bs(@member, nil, @members, @electorate ? @member.url_electorate : nil, "allfriends", "All friends", "Show all MPs in order of how similarly to this MP they voted", @display == "allfriends")
    = members_nav_link_bs(@member, nil, @members, @electorate ? @member.url_electorate : nil, "alldreams", "Policy comparisons", "Show all Policies and how this MP voted on them", @display == "alldreams")

- if @display == "allfriends"
  = render "members/bootstrap/possible_friends", all_friends: true, member: @member, electorate: @electorate
- elsif @display == "alldreams"
  = render "members/bootstrap/policy_comparisons", member: @member, members: @members, electorate: @electorate
- else
  = render "members/bootstrap/summary", electorate: @electorate, members: @members, member: @member, member2: @member2, display: @display, person: @person
  = render "members/bootstrap/external_links", member: @member
  - if @display == "allvotes"
    = render "members/bootstrap/votes_attended", electorate: @electorate, members: @members, member: @member, house: @house
  - elsif @display == "summary" || @display.nil?
    = render "members/bootstrap/interesting_votes", members: @members, member: @member, electorate: @electorate
    = render "members/bootstrap/policy_comparisons", member: @member, members: @members, electorate: @electorate
    = render "members/bootstrap/possible_friends", all_friends: false, member: @member, electorate: @electorate
  - elsif @display == "everyvote"
    = render "members/bootstrap/all_votes", members: @members, electorate: @electorate
