- content_for :title do
  - if @display == "allfriends"
    Friends of
    = @member.full_name
  - elsif @electorate
    Voting Record — Representatives for
    = @member.electorate
  - else
    Voting Record —
    = @member.full_name2

%h1= yield :title
/ the second tier navigation as tabs
:plain
  <!-- add hashes to $second_links array, keys are
       'href' - URL of link
       'text' - displayed text
       'tooltip' - text to put in title
       'current' - 'on' or 'off' for whether this item is currently selected -->
#secondnavtabs
  %ul
    = members_nav_link(@member, nil, @members, @electorate ? @member.url_electorate : nil, nil, "Summary", "Overview of MP", @display.nil? || @display == "summary")
    = members_nav_link(@member, nil, @members, @electorate ? @member.url_electorate : nil, "allvotes", "Votes attended", "Show every vote cast by this MP", @display == "allvotes")
    = members_nav_link(@member, nil, @members, @electorate ? @member.url_electorate : nil, "everyvote", "All votes", "Show even divisions where the MP was absent, but could have voted", @display == "everyvote")
    = members_nav_link(@member, nil, @members, @electorate ? @member.url_electorate : nil, "allfriends", "All friends", "Show all MPs in order of how similarly to this MP they voted", @display == "allfriends")
    = members_nav_link(@member, nil, @members, @electorate ? @member.url_electorate : nil, "alldreams", "Policy comparisons", "Show all Policies and how this MP voted on them", @display == "alldreams")
<!-- the second tier navigation as dropdowns end-->

- if @display == "allfriends"
  = render "possible_friends", all_friends: true, member: @member, electorate: @electorate
- elsif @display == "alldreams"
  = render "policy_comparisons", member: @member, members: @members, electorate: @electorate
- else
  = render "summary", electorate: @electorate, members: @members, member: @member, member2: @member2, display: @display, person: @person
  = render "external_links", member: @member
  - if @display == "allvotes"
    = render "votes_attended", electorate: @electorate, members: @members, member: @member, house: @house
  - elsif @display == "summary" || @display.nil?
    = render "interesting_votes", members: @members, member: @member, electorate: @electorate
    = render "policy_comparisons", member: @member, members: @members, electorate: @electorate
    = render "possible_friends", all_friends: false, member: @member, electorate: @electorate
  - elsif @display == "everyvote"
    = render "all_votes"
