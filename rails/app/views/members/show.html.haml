- content_for :title do
  - if @member2
    Voting Comparison —
    = @member.full_name2
    to
    = @member2.full_name2
  - elsif @electorate
    Voting Record — Representatives for
    = @electorate
  - elsif @display == "allfriends"
    Friends of
    = @member.full_name
  - elsif @policy
    = @member.name
    compared to '#{@policy.name}'
  - else
    Voting Record —
    = @member.full_name2

- if @member2
  %h1
    Voting Comparison —
    = @member.full_name2
    %br
    to
    = @member2.full_name2
-else
  %h1= yield :title
/ the second tier navigation as tabs
:plain
  <!-- add hashes to $second_links array, keys are
       'href' - URL of link
       'text' - displayed text
       'tooltip' - text to put in title
       'current' - 'on' or 'off' for whether this item is currently selected -->
#secondnavtabs
  %ul
    - if @policy
      - # FIXME This summary link is obviously wrong ("allvotes"?)
      = members_nav_link(@member, nil, @members, @electorate, "allvotes", "Summary", "Show every vote cast by this MP", (@display == nil ? "allvotes" : @display), @policy)
      = members_nav_link(@member, nil, @members, @electorate, "motions", "Full description", "Also show descriptions of every vote", @display, @policy)
      = members_nav_link(@member, nil, @members, @electorate, "alldreams", "Policy comparisons", "Show all Policies and how this MP voted on them", @display)
    - elsif @member2
      = members_nav_link(@member, @member2, @members, @electorate, "difference", "Differences", "Votes where the two MPs votes differed", (@display.nil? ? "difference" : @display))
      = members_nav_link(@member, @member2, @members, @electorate, "allvotes", "Votes attended", "Show every vote cast by this MP", @display)
      = members_nav_link(@member, @member2, @members, @electorate, "everyvote", "All votes", "Show even divisions where the MP was absent, but could have voted", @display)
    - else
      = members_nav_link(@member, nil, @members, @electorate, nil, "Summary", "Overview of MP", @display)
      = members_nav_link(@member, nil, @members, @electorate, "allvotes", "Votes attended", "Show every vote cast by this MP", @display)
      = members_nav_link(@member, nil, @members, @electorate, "everyvote", "All votes", "Show even divisions where the MP was absent, but could have voted", @display)
      = members_nav_link(@member, nil, @members, @electorate, "allfriends", "All friends", "Show all MPs in order of how similarly to this MP they voted", @display)
      = members_nav_link(@member, nil, @members, @electorate, "alldreams", "Policy comparisons", "Show all Policies and how this MP voted on them", @display)
<!-- the second tier navigation as dropdowns end-->

- if @member2
  = render "summary"
  - if @display.nil? || @display == "difference"
    = render "difference"
  - elsif @display == "allvotes"
    = render "difference_all_votes"
- elsif @display == "summary" || (!@policy && @display.nil?)
  = render "summary"
  = render "external_links"
  = render "interesting_votes"
  = render "policy_comparisons"
  = render partial: "possible_friends", locals: {all_friends: false}
- elsif @display == "allvotes"
  = render "summary"
  = render "external_links"
  = render "votes_attended"
- elsif @display == "everyvote"
  = render "summary"
  = render "external_links"
  = render "all_votes"
- elsif @display == "allfriends"
  = render partial: "possible_friends", locals: {all_friends: true}
- elsif @display == "alldreams"
  = render "policy_comparisons"
- elsif @policy
  = render "policy_comparison"
