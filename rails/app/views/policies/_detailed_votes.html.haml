%table
  - @policy.divisions.each do |division|
    %tr{class: (division.policy_vote(@policy).include?('3') ? 'motiontitlestrong' : 'motiontitle')}
      %td{:align => "left", :colspan => "7"}
        = link_to division_path(date: division.date, number: division.number, house: division.australian_house, dmp: @policy.id) do
          #{division.name} - #{formatted_date(division.date)} - Division No. #{division.number}
    %tr{:valign => "top"}
      %td
        %p
          Policy vote:
          = vote_display_in_table(division.policy_vote(@policy), division.aye_majority)
        = render 'divisions/summary_party_votes', division: division
      %td{:colspan => "4"}
        = formatted_motion_text(division)
