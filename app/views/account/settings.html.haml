- content_for :title, 'Account settings'

%h1= yield :title
%p
  %span.ptitle Email:
  = current_user.email
  (
  = link_to "change email", edit_user_registration_path
  )
  %br/
  %span.ptitle Real name:
  = current_user.real_name
  (
  = link_to "change real name", edit_user_registration_path
  )
  %br/
  %span.ptitle Password:
  (
  = link_to "change password", edit_user_registration_path
  )

%h2 Policies which you made
%ul
- current_user.policies.each do |policy|
  %li
    = link_to policy.name, policy_path2(policy)
    (#{policy.status})
%p
  (
  %a{:href => "addpolicy.php"}> make a new policy
  )
