- if @divisions.to_a.empty?
  %p No votes listed
- else
  %ol.divisions_list.list-unstyled
    - @divisions.each do |division|
      %li.panel.panel-default
        %article.division-item.panel-body{:class => "#{division_edit_status_class(division)}"}
          .division-edit-notice.pull-right.text-muted
            - if division.motion_edited?
              edited
              = relative_time division.wiki_motion.edit_date
            - else
              raw
          .division-meta
            %time.division-datetime{:datetime => "#{division.date}"}= division_date_and_time(division)
            %span.division-house.pre= division.australian_house_name if @house.nil?
          %h2.division-title
            = link_to truncate(division.name, length: 180), division

          %ul.list-inline.division-data
            - if @party
              %li
                = whip_guess_with_strength_in_words(division.whips.find_by(party: @party)).capitalize
              %li= division.no_rebellions_in_party(@party) > 0 ? pluralize(division.no_rebellions_in_party(@party), 'rebel') : "No rebels"
              %li.text-muted #{fraction_to_percentage_display(division.attendance_fraction_in_party(@party))} attendance
            - else
              %li= division_outcome_with_majority_strength(division)
              %li= division.rebellions > 0 ? pluralize(division.rebellions, 'rebellion') : "No rebellions"
              %li.text-muted #{fraction_to_percentage_display(division.attendance_fraction)} attendance
