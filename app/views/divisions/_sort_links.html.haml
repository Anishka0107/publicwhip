%p
  Sort by:
  = link_to_unless sort == "name", "Name", division_no_member_path(division, params.merge(sort: "name", dmp: nil), false)
  -# For senate hide this to match php app
  -# This isn't actually desired so change this
  - if division.australian_house == "representatives"
    |
    = link_to_unless sort == "constituency", "Electorate", division_no_member_path(division, params.merge(sort: "constituency", dmp: nil), false)
  |
  = link_to_unless sort.nil?, "Party", division_no_member_path(division, params.merge(sort: nil, dmp: nil), false)
  |
  = link_to_unless sort == "vote", "Vote", division_no_member_path(division, params.merge(sort: "vote", dmp: nil), false)
