%section.motion.clearfix{class: division.motion_edited? ? "motion-edited" : "motion-raw"}
  - if division.motion_edited?
    %p.division-edit-notice.bg-info.col-md-12
      Last edited
      = relative_time division.wiki_motion.edit_date
      by
      = link_to division.wiki_motion.user.name, division.wiki_motion.user
  - else
    %p.division-edit-notice.alert-warning.col-md-12
      %strong Unedited text
      automatically extracted from the debate.
      = link_to "Improve the page providing a summary.", edit_division_path(division)

  .row
    %nav.header-actions.col-md-3
      = link_to "Edit motion", edit_division_path(division), title: "Edit and improve this description", class: "btn btn-default btn-xs"
    %h2.col-md-9 Motion
  .motion-text
    = division.formatted_motion_text
  %nav.motion-source-info
    %ul.list-inline.nav.nav-pills
      %li= link_to "Debate in Parliament", division.oa_debate_url, title: "Links to debate shown at www.openaustralia.org", class: "text-muted"
