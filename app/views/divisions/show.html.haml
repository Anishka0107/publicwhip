- content_for :title do
  = truncate(@division.name, length: 180)

.page-header.division-header
  %h1
    %small.pre-title= division_date_and_time(@division) + ", " + @division.australian_house_name
    = yield :title

- if @member.nil?
  #secondnavtabs
    %ul.nav.nav-tabs
      = nav_link("Summary", @division, "Overview of division", @display.nil?)
      = nav_link("Policies", division_policies_path(division_params(@division)), "Show or change the polices which vote on this division", @display == "policies")

= render "motion", division: @division
= render "summary", division: @division, member: @member, members: @members

- if @division.policies
  %h2.h4 Related Policies

  = render "current_policies_list", division: @division, display: @display
