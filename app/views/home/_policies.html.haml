- # Refactor: this is identical to a partial in policies, execept for the header level
%ul.list-unstyled
  - policies.each do |policy|
    %li
      %h3
        = link_to capitalise_initial_character(policy.name_with_for), policy
        %small
          = pluralize(policy.divisions.count, "division")
          - if policy.unedited_motions_count != 0
            %em= "(#{policy.unedited_motions_count} unedited)"
