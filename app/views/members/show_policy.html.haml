- content_for :title do
  = @member.name
  compared to '#{@policy.name}'

.page-header
  %h1
    = image_tag(@member.large_image_url, alt: "Photo of #{@member.name_without_title}", size: "88x115")
    = yield :title

#secondnavtabs
  %ul.nav.nav-tabs
    = nav_link("Summary", member_path2(@member, dmp: @policy.id), "Show every vote cast by this MP", @display.nil?)
    = nav_link("Full description", member_path2(@member, display: "motions", dmp: @policy.id), "Also show descriptions of every vote", @display == "motions")

= render "policy_comparison", member: @member, policy: @policy, full: (@display == "motions")
