- content_for :title do
  = @member.name
  compared to '#{@policy.name}'

.page-header
  %h1
    = image_tag(@member.large_image_url, alt: "Photo of #{@member.name_without_title}", size: "88x115")
    = yield :title

#secondnavtabs
  %ul.nav.nav-tabs
    = nav_link_unless_current("Summary", member_policy_path2(@member, @policy), "Show every vote cast by this MP")
    = nav_link_unless_current("Full description", full_member_policy_path2(@member, @policy), "Also show descriptions of every vote")

= render "policy_comparison", member: @member, policy: @policy, full: (@display == "motions")
