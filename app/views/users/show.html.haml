- content_for :title, @you ? 'Your account' : @user.name

- if @you
  %h1= yield :title
  %p
    %span.ptitle Email:
    = @user.email
    (
    = link_to "change email", edit_user_registration_path
    )
    %br/
    %span.ptitle Real name:
    = @user.name
    (
    = link_to "change real name", edit_user_registration_path
    )
    %br/
    %span.ptitle Password:
    (
    = link_to "change password", edit_user_registration_path
    )

%h2
  Policies which
  = @you ? "you" : @user.name
  made

%ul
- @user.policies.each do |policy|
  %li
    = link_to policy.name, policy
    (#{policy.status})

- if @you
  %p
    (
    = link_to "make a new policy", new_policy_path
    )
