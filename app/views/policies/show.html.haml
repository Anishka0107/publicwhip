- content_for :title, "For #{@policy.name}"

-# Only show this stuff if we actually have an edit history
- if @policy.most_recent_version
  - content_for :history_notice do
    = render 'layouts/history_notice', policy: @policy

= render 'page_header', policy: @policy

- if @policy.divisions.count > 0
  %section.policy-comparisions
    = render 'policy_comparisons_block', policy: @policy, title: 'Voted very strongly for', distances: @policy.policy_person_distances.very_strongly_for.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }
    = render 'policy_comparisons_block', policy: @policy, title: 'Voted strongly for', distances: @policy.policy_person_distances.strongly_for.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }
    = render 'policy_comparisons_block', policy: @policy, title: 'Voted moderately for', distances: @policy.policy_person_distances.moderately_for.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }
    = render 'policy_comparisons_block', policy: @policy, title: 'Voted a mixture of for and against', distances: @policy.policy_person_distances.for_and_against.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }
    = render 'policy_comparisons_block', policy: @policy, title: 'Voted moderately against', distances: @policy.policy_person_distances.moderately_against.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }
    = render 'policy_comparisons_block', policy: @policy, title: 'Voted strongly against', distances: @policy.policy_person_distances.strongly_against.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }
    = render 'policy_comparisons_block', policy: @policy, title: 'Voted very strongly against', distances: @policy.policy_person_distances.very_strongly_against.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }
    = render 'policy_comparisons_block', policy: @policy, title: 'Never voted on', distances: @policy.policy_person_distances.never_voted.select { |ppd| ppd.person.member_for_policy(@policy).currently_in_parliament? }

  = render "nav", policy: @policy, display: nil

  %h2#divisions Relevant divisions
  = render 'vote_table_leader', policy: @policy
  = render 'vote_summary_table', member: @member, policy: @policy
- else
  %p This policy isn't connected with any divisions just yet.
  = render 'division_edit_instructions'
