- content_for :title, 'Make a new policy'

.page-header
  %h1= yield :title

- unless @policy.errors.any?
  = render "new_policy_intro"

= simple_form_for @policy do |f|
  = f.input :name, label: 'If you are for', required: false, placeholder: 'equal treatment of same-sex couples'
  = f.input :description, label: 'you believe that', required: false, placeholder: 'the federal government should amend commonwealth laws so that homosexual couples are treated equally to heterosexual couples', input_html: {rows: 6}
  %ul
    %li
      Privacy &mdash;
      By creating a policy you are making your name
      %b= current_user.name
      and the policy's voting record public.
    %li
      Licensing &mdash;
      You agree to license what you add here under the Creative Commons Attribution License.
      = link_to "Why?", "#policies_license", data: {toggle: "collapse"}
  .alert.alert-info#policies_license.collapse
    = render "help/faq/policies_license"
  = f.button :submit, class: 'btn-primary', value: 'Make Policy'
  = link_to "Cancel", :back, class: "btn btn-default"
