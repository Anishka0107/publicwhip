- unless members.empty?
  .policy-comparision-block.row{class: "position-#{title.parameterize}"}
    %h3.policy-comparision-position.col-xs-12
      = title
      = policy.name
    %ul.policy-comparision-list.member-list-compact.list-unstyled
      - members.each do |member|
        %li.policy-comparision-item.member-item.col-xs-12.col-sm-6.col-md-4.col-lg-3
          = link_to member, class: 'policy-comparision-member member-link' do
            = image_tag(member.small_image_url, alt: "Photo of #{member.name_without_title}", class: 'member-photo', size: "44x58")
            %span.member-name= member.name
